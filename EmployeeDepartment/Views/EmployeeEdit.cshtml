@m EmployeeDepartment.Models.EmployeeModel
@{
    ViewBag.Title = "EmployeeEdit";
     Layout = "~/Shared/Fixed.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="row">        
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Employee</h3>
            </div>
            <br />            
           @using (Html.BeginForm("EmployeeEdit", "Main", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            @Html.ValidationSummary(true)
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-4">
                                    <label for="Pk_ID">ID</label>
                                    @Html.TextBoxFor(m => m.Pk_ID, new { @class = "form-control", @required = "required", @placeholder = "ID",Visible="false" })
                                    @Html.ValidationMessageFor(m => m.Pk_ID, null, new { style = "color:red;" })
                                </div>
                                <div class="col-xs-4">
                                    <label for="FirstName">First Name</label>
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = "required", @placeholder = "First Name" })
                                    @Html.ValidationMessageFor(m => m.FirstName, null, new { style = "color:red;" })
                                </div>
                                 <div class="col-xs-4">
                                    <label for="LastName">Last Name</label>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = "required", @placeholder = "Last Name" })
                                    @Html.ValidationMessageFor(m => m.LastName, null, new { style = "color:red;" })
                                </div>
                                 <div class="col-xs-4">
                                    <label for="ContactNumber">Contact Number</label>
                                    @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @required = "required", @placeholder = "Contact Number" })
                                    @Html.ValidationMessageFor(m => m.Contact, null, new { style = "color:red;" })
                                </div>

                            </div>
                             <br />

                            <div class="row">
                                <div class="col-xs-8">
                                    <label> Address</label>
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @required = "required", @placeholder = "Address" })
                                    @Html.ValidationMessageFor(m => m.Address, null, new { style = "color:red;" })
                                </div>
                                 <div class="col-xs-4">
                                    @Html.RadioButtonFor(m=> m.Gender, "Male", new { @checked = true} )
                                    @Html.RadioButtonFor(m=> m.Gender, "Female", new { @checked = false} )
                                    @Html.ValidationMessageFor(m => m.Gender, null, new { style = "color:red;" })
                                </div>
                                
                                
                            </div>

                            <br />
                             <div class="row">
                               
                           
                                <div class="col-xs-4">
                                    <label for="EmailID">Login EmailID</label>
                                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control", @required = "required", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.EmailID, null, new { style = "color:red;" })
                                </div>
                                <div class="col-xs-4">
                                    <label for="Password">Login Pasword</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, null, new { style = "color:red;" })
                                </div>
                                <div class="col-xs-4">
                                    <label for="DOB">Date of Birth</label>
                                    @Html.TextBoxFor(m => m.DOB, new {@id="datepicker1", @class = "form-control", @required = "required", @placeholder = "Date of Birth" })
                                    @Html.ValidationMessageFor(m => m.DOB, null, new { style = "color:red;" })
                                </div>
                             </div>>
                                 <br />

                            <div class="row">                               

                                <div class="col-xs-4">
                                    <label for="Department">Department</label>
                                @Html.DropDownListFor(m => m => m.DepartmentID, new SelectList(ViewBag.List, "Value", "Text"),new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(m => m.Department, null, new { style = "color:red;" })
                                </div>
                                <div class="col-xs-4">
                                    <label for="Designation">Designation</label>
                                    @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", @required = "required", @placeholder = "Designation" })
                                    @Html.ValidationMessageFor(m => m.Designation, null, new { style = "color:red;" })
                                </div>
                                <div class="col-xs-4">
                                    @Html.RadioButtonFor(m=> m.Status, "Active", new { @checked = true} )
                                    @Html.RadioButtonFor(m=> m.Status, "Inactive", new { @checked = false} )
                                    @Html.ValidationMessageFor(m => m.Status, null, new { style = "color:red;" })
                                </div>
                                
                            </div>
                                <br />
                           <div class="row">
                                
                                </div>          
                           </div>
                        </div>                  

                         <div class="box-footer">

                            <button type="submit" class="btn btn-primary">Update</button>
                            &nbsp; &nbsp;&nbsp;
                            <button type="submit" class="btn btn-primary">Cancel</button>

                        </div>

                    </div>
                </form>
            }

            
        </div>
        
    </div>
    
</section>
